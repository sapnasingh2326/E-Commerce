    </style>
</head>
<body>
    <nav>
        <ul>
            <li><a href="YourOrders"><i class="fas fa-box"></i> Your Orders</a></li>
            <li><a href="#login-security"><i class="fas fa-user-shield"></i> Login & Security</a></li>
            <li><a href="prime"><i class="fas fa-crown"></i> Prime</a></li>
            <li><a href="youraddresses"><i class="fas fa-map-marker-alt"></i> Your Addresses</a></li>
            <li><a href="paymentoptions"><i class="fas fa-credit-card"></i> Payment Options</a></li>
        </ul>
    </nav>

    <div class="address-content-wrapper">
        
        <h2>Add a New Address</h2>
        <form method="post" class="address-form">
            <input type="hidden" asp-for="NewAddress.Id" />
            <div class="form-group">
                <label for="Name">Name:</label>
                <input type="text" id="Name" asp-for="NewAddress.Name" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="Street">Street:</label>
                <input type="text" id="Street" asp-for="NewAddress.Street" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="City">City:</label>
                <input type="text" id="City" asp-for="NewAddress.City" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="State">State:</label>
                <input type="text" id="State" asp-for="NewAddress.State" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="Zip">Zip:</label>
                <input type="text" id="Zip" asp-for="NewAddress.Zip" class="form-control" required />
            </div>
            <button class="btn btn-primary" type="submit" asp-page-handler="Add">Add Address</button>
        </form>
        <h1>Your Addresses</h1>
        @if (Model.AddressList.Count > 0)
        {
            foreach (var address in Model.AddressList)
            {
                <div class="address-card">
                    <div class="address-details">
                        <h3>@address.Name</h3>
                        <p>@address.Street, @address.City, @address.State @address.Zip</p>
                    </div>
                    <div class="address-actions">
                        <form method="post">
                            <button class="btn btn-danger" type="submit" asp-page-handler="Delete" asp-route-id="@address.Id">Delete</button>
                        </form>
                    </div>
                </div>
            }
        }
        else
        {
            <p>No addresses found. Add a new address below.</p>
        }

    </div>
</body>
</html>
