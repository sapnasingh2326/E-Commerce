<script>
    // Display current date
    document.addEventListener('DOMContentLoaded', function () {
        const currentDate = new Date();
        const options = { year: 'numeric', month: 'long', day: 'numeric' };
        document.getElementById('currentDate').textContent = currentDate.toLocaleDateString(undefined, options);
    });

    // Handle call log
    const callLog = [];
    const callLogElement = document.getElementById('callLog');

    function addCallToLog(type, number) {
        const li = document.createElement('li');
        li.className = 'list-group-item d-flex justify-content-between align-items-center';
        li.innerHTML = `${number} <span class="badge badge-${type === 'incoming' ? 'success' : 'danger'}">${type.charAt(0).toUpperCase() + type.slice(1)}</span>`;
        callLogElement.appendChild(li);
        callLog.push({ type, number });
    }

    // Call form submission
    document.getElementById('callForm').addEventListener('submit', function (event) {
        event.preventDefault();
        const phoneNumber = document.getElementById('phoneNumber').value;
        addCallToLog('outgoing', phoneNumber);
        $('#callModal').modal('hide'); // Hide the modal after making a call
        document.getElementById('callForm').reset(); // Reset form
    });

    // Simulate receiving a call
    setTimeout(() => {
        const incomingNumber = '123-456-7890';
        addCallToLog('incoming', incomingNumber);
    }, 5000); // Simulates receiving a call after 5 seconds
</script>

