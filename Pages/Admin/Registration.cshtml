<div class="content-wrapper">
    <section class="content-header">
       
        <div class="container-fluid">
           
            <!-- 1st container fluid start-->
            <div class="row mb-2">
               
                <div class="col-sm-6">
                    <h1> Registrations</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-page="index">Home</a></li>
                        <li class="breadcrumb-item active">DataTables</li>
                    </ol>
                </div>
            </div>
        </div><!-- / 1st container-fluid ends-->
    </section>


    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- Countrise validation -->
                <div class="card card-primary card-outline card-info">
                    <h5 class="ml-3">Registration</h5>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="registration.Id" />
                        <div class="card-body">
                            <!-- First Row -->
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label>Role:</label>
                                        <select id="Role" asp-for="registration.RoleId" class="form-control">
                                            <option value="">Select Role</option>
                                            @if (Model.role != null)
                                            {
                                                @foreach (var item in Model.role)
                                                {
                                                    <option value="@item.Id">@item.RoleName</option>
                                                }
                                            }
                                        </select>
                                        <span asp-validation-for="registration.Role" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label>First Name:</label>
                                        <input type="text" asp-for="registration.Name" class="form-control" placeholder="First Name" required>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label>Last Name:</label>
                                        <input type="text" asp-for="registration.UserName" class="form-control" placeholder="Last Name" maxlength="10" required>
                                    </div>
                                </div>
                            </div>

                            <!-- Second Row -->
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label>Mobile:</label>
                                        <input type="text" asp-for="registration.Mobile" class="form-control" placeholder="Mobile Number" maxlength="10" required>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label>Email:</label>
                                        <input type="email" asp-for="registration.Email" class="form-control" placeholder="Email" required>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label>Address:</label>
                                        <textarea asp-for="registration.Address" class="form-control" rows="3" placeholder="Address" maxlength="100" required></textarea>

                                    </div>
                                </div>

                            </div>

                            <!-- Third Row -->
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label>PostCode:</label>
                                        <input type="text" asp-for="registration.PostCode" class="form-control" placeholder="PostCode" maxlength="6" required>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <!-- Password field -->
                                        <label for="password">Password:</label>
                                        <input type="password" id="password" asp-for="registration.Password" class="form-control" placeholder="Password" required>
                                        <!-- An element to toggle between password visibility -->
                                        <div class="form-check mt-2">
                                            <input type="checkbox" class="form-check-input" id="showPassword" onclick="togglePassword()">
                                            <label class="form-check-label" for="showPassword">Show Password</label>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Fourth Row -->
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label class="ml-2">Registration Image:</label>
                                        <input asp-for="registration.ImageUrl" multiple class="form-control" type="file" placeholder="ImageUrl">
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label>Created Date:</label>
                                        <input type="datetime-local" asp-for="registration.CreatedDate" class="form-control" placeholder="Created Date" required>
                                    </div>
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <div class="text-center mt-3">
                                @if (Model.registration.Id != 0)
                                {
                                    <button type="submit" class="btn btn-info">UPDATE</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-info">SUBMIT</button>
                                }
                            </div>
                        </div>
                    </form>

               </div>

            </div>


                <form method="post">

                    <div class="card-body card card-outline card-success pl-1">
                        <div class="card-header">

                            <h3 class="mr-2">Registration Datalist</h3>
                        </div>

                        <table id="example1" class="table table-bordered table-striped">
                            <!--For drop menu-->
                            <thead>
                                <tr>
                                    <th scope="col">Id</th>
                                    <th scope="col">Role</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">UserName</th>
                                    <th scope="col">Mobile</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Address</th>
                                    <th scope="col">PostCode</th>
                                    <th scope="col">Password</th>
                                    @* <th scope="col">CreatedDate</th> *@
                                    <th scope="col">ImageUrl</th>
                                    <th scope="col">Action</th>

                                </tr>
                            </thead>

                            <tbody>

                                @if (Model.datalist.Count() > 0)
                                {
                                    foreach (var item in Model.datalist)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.RoleName</td>
                                            <td>@item.Name</td>
                                            <td>@item.UserName</td>
                                            <td>@item.Mobile</td>
                                            <td>@item.Email</td>
                                            <td>@item.Address</td>
                                            <td>@item.PostCode</td>
                                            <td>@item.Password</td>
                                            @* <td>@item.CreatedDate</td> *@
                                            <td><img src="@item.ImageUrl" width="50" height="50" alt="Registration Image"></td>



                                            <td class="mr-5">
                                                <a asp-page="Registration" asp-route-id="@item.Id" class="btn btn-success">EDIT</a>


                                                <button asp-page-handler="Delete" asp-route-id="@item.Id"
                                                        onclick="return confirm('Are you sure you want to DELETE?')" class="btn btn-danger">
                                                    DELETE
                                                </button>

                                            </td>


                                        </tr>
                                    }
                                }



                                else
                                {

                                    <tr>No data found</tr>

                                }


                            </tbody>


                        </table>

                    </div>

                </form>


            </div>
        </div>
   
    </div>

