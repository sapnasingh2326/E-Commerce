@page
@model ECommerceWeb.Pages.Admin.CreateInvoiceModel


@{
    ViewData["Title"] = "Create Invoice";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create Invoice</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center text-primary mb-4">Create Invoice</h2>
        <h4 class="text-purple font-weight-bold">Purchase Details</h4>
        <hr />
        <div class="content-wrapper">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>Item(s)</th>
                            <th>Details</th>
                            <th>Amount (Tax Inc)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderProductList)
                        {
                            <tr>
                                <td class="text-center">
                                    <img src="~/images/172f5477-a290-44a4-834e-e169f4cea965_images.png" class="img-thumbnail" style="height: 60px; width: 60px;" alt="Product Image" />
                                </td>
                                <td>
                                    <table class="table table-borderless">
                                        <tr>
                                            <td><strong>Product Name:</strong></td>
                                            <td>@item.ProductName</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Product UOM:</strong></td>
                                            <td>@item.CatgProductName</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Quantity:</strong></td>
                                            <td>@item.Quantity</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Price:</strong></td>
                                            <td>@item.Price</td>
                                        </tr>
                                    </table>
                                </td>
                                <td class="text-center font-weight-bold text-primary">@item.SubPrice</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="d-flex justify-content-end mt-3">
                <h5 class="mr-3">Total Amount:</h5>
                <h5 class="text-info font-weight-bold">@Model.OrderProductList.Sum(x => x.SubPrice)</h5>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>






































































