@page
@model ECommerceWeb.Pages.Admin.InvoicePrintModel
@{
}
<style>
    .wrapper {
        margin: 20px;
    }

    .invoice {
        padding: 20px;
        background: #fae4e3;
        border: 2px solid #abff19;
    }

        .invoice.wrapper:hover {
            color: goldenrod;
        }

    .page-header {
        margin-bottom: 20px;
    }

    .table th, .table td {
        text-align: center;
        background-color: #c99b99;
    }

        .table th, .table td:hover {
            background-color: #8871a6;
            color: white;
        }

    .lead {
        font-size: 1.45rem;
        color: #0e064f;
    }

    .text-muted {
        color: #630447 !important;
    }

    h2, small {
        color: #806003;
    }

    .lead:hover {
        color: #8c860b;
        display: block;
        font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
    }

    tbody {
        border: 1px solid #247356;
    }
    /* table{
            border: 1px solid #7734eb;
       } */
    /* .table:hover{
            border: 2px solid #ed18cd;
       } */
</style>

<div class="content-wrapper">
    <!-- Main content -->
    <section class="invoice">
        <!-- title row -->
        <div class="row">
            <div class="col-12">
                <h2 class="page-header">
                    <i class="fas fa-globe"></i> AdminLTE, Inc.
                    <small class="float-right">Date: 27/8/2024</small>
                </h2>
            </div>
            <!-- /.col -->
        </div>
        <!-- info row -->
        <div class="row invoice-info">
            <div class="col-sm-4 invoice-col">
                From
                <address>
                    <strong>Admin, Inc.</strong><br>
                    795 Folsom Ave, Suite 600<br>
                    San Francisco, CA 94107<br>
                    Phone: (804) 123-5432<br>
                    Email: info@almasaeedstudio.com
                </address>
            </div>
            <!-- /.col -->
            <div class="col-sm-4 invoice-col">
                To
                <address>
                    <strong>@Model.registrationsAD.Name</strong><br>
                    @Model.registrationsAD.Address<br>
                    @Model.registrationsAD.Mobile<br />
                    @Model.registrationsAD.Email<br />
                    
                   
                </address>
            </div>
            <!-- /.col -->
            <div class="col-sm-4 invoice-col">
                <b>Invoice #007612</b><br>
                <br>
                <b>Order ID:</b>@Model.orderinfo.OrderNumber<br>
                <b>Payment Due:</b> @Model.orderinfo.OrderDate<br>
                <b>Account:</b> 968-34567
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
        <!-- Table row -->

        <div class="row">
            <div class="col-12 table-responsive">

                <table class="table table-striped">
                    <thead>

                        <tr>
                            <th>Category</th>
                            <th>Product</th>
                            <th>Serial #</th>
                            
                            <th>Quality</th>
                            <th>Price</th>
                            <th>Total</th>
                            @* <th align="left" style="color:#32CD32;font-weight:bold;">{5}</th> *@
                        </tr>

                    </thead>
                    <tbody>
                        @foreach (var item in Model.orderProductList)
                        {
                            <tr>
                                <td>@item.CatgProductName</td>
                                <td>@item.ProductName</td>
                                <td>@item.ProductKey</td>                                
                                <td>@item.Quantity</td>
                                <td>@item.Price</td>
                                <td>@item.SubPrice</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
        <!-- /.col -->
        <!-- /.row -->

        <div class="row">
            <!-- accepted payments column -->
            <div class="col-6">
                <p class="lead">Payment Methods:</p>
                <img src="~/metronic-shop-ui-master/assets/corporate/img/payments/visa.jpg" alt="Visa">
                <img src="~/metronic-shop-ui-master/assets/corporate/img/payments/MasterCard.jpg" alt="Mastercard">
                <img src="~/metronic-shop-ui-master/assets/corporate/img/payments/american-express.jpg" alt="American Express">
                <img src="~/metronic-shop-ui-master/assets/corporate/img/payments/western-union.jpg" alt="We accept Western Union">
                <img src="~/metronic-shop-ui-master/assets/corporate/img/payments/PayPal.jpg" alt="Paypal">
                <p class="text-muted well well-sm shadow-none" style="margin-top: 10px;">
                    Etsy doostang zoodles disqus groupon greplin oooj voxy zoodles, weebly ning heekya handango imeem plugg dopplr
                    jibjab, movity jajah plickers sifteo edmodo ifttt zimbra.
                </p>
            </div>
            <!-- /.col -->
            <div class="col-6">
                <p class="lead">Amount Due 2/22/2024</p>

                <div class="table-responsive">
                    <table class="table">
                        <tr>
                            <th style="width:50%">Subtotal:</th>
                            <td>$250.30</td>
                        </tr>
                        <tr>
                            <th>Tax (9.3%)</th>
                            <td>$10.34</td>
                        </tr>
                        <tr>
                            <th>Shipping:</th>
                            <td>$5.80</td>
                        </tr>
                        <tr>
                            <th>Total:</th>
                            <td>$265.24</td>
                        </tr>
                    </table>
                </div>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>


<!-- ./wrapper -->
<!-- Page specific script -->
<script>
    window.addEventListener("load", window.print());
</script>

<!-- External JS -->
<script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
